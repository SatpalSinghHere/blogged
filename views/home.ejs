<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
    
    <%- include('./partials/navbar') %>
    <% if (locals.blogs) { %>
        <div class="container w-75 d-flex flex-wrap">
            <% blogs.forEach(blog => { %>
                <div class="card m-4" style="width: 18rem;">
                    <img src="<%= blog.coverImage %>" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title"><%=blog.title%></h5>
                        <div style="display: flex; justify-content: space-between;">
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            <div>
                                <a href="/blog/<%= blog._id %>/edit" class="btn btn-warning">Edit</a>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    <i class="fa fa-trash-o" style="font-size:24px"></i>
                                </button>
                                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h1 class="modal-title fs-5" id="staticBackdropLabel">Deleting this blog</h1>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                          Are you sure you want to delete this blog? This action is not reversible.
                                        </div>
                                        <div class="modal-footer">
                                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                          <form action="/blog/delete/<%= blog._id %>" method="get" style="display: inline;">
                                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" style="font-size:24px"></i></button>
                                          </form>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
    
    <%- include('./partials/scripts') %>
</body>
</html>